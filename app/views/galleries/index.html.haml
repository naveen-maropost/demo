.container
  .row
    .col-xs-12.clearfix.text-center
      = link_to "Add Picture", new_gallery_path, class: "margin10 btn-block btn-primary"
      .row
        - @galleries.each do |gallery|
          .col-md-3.margin20
            .card{:style => "width: 20rem;"}
              %img.card-img-top{:alt => "Card image cap", :src => "#{gallery.attachment.url(:medium)}"}/
              .card-block
                %h4.card-title
                  = link_to gallery.name, edit_gallery_path(gallery, :format => :js), remote: true
                %a.btn.btn-primary{:href => "#"} DELETE
      = paginate @galleries 

  .popup_data
