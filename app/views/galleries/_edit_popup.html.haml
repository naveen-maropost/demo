#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1", :style => "display:block;"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title UPDATE GALLERY
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      = form_for(@gallery,method: :patch, remote: true, class: "form-horizontal") do |f|
        .modal-body
          .row
            .col-md-9
              .form-group
                %label.control-label Name
                = f.text_field :name, autocomplete: "off", class: "form-control img-name"
            .col-md-3
              %p.err-text
          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
            = f.submit "Save changes", class: "btn btn-primary img-name-btn"