.container
  .row
    .col-md-6
      = form_for(@gallery, class: "form-horizontal") do |f|
        - if @gallery.errors.any?
          #error_explanation
            %h2
              = pluralize(@gallery.errors.count, "error")
              prohibited this gallery from being saved:
            %ul
              - @gallery.errors.full_messages.each do |msg|
                %li= msg

        .form-group
          %label.control-label Name
          = f.text_field :name, placeholder: "enter name", class: "form-control"
        .form-group
          = f.label :attachment, class: "control-label"
          = f.file_field :attachment, class: "form-control"
        .actions
          = f.submit "Submit", class: "btn btn-primary"