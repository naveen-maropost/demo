- @galleries.each do |gallery|
  - cache gallery, expires_in: 5.minutes do
    .col-md-3.margin20
      = link_to gallery_path(gallery["id"]) do
        .card{:style => "width: 20rem;"}
          %img.card-img-top{:alt => "Card image cap", :src => "#{gallery["attachment"]["medium"]["url"]}"}/
          .card-block
            %h4.card-title
              = link_to gallery["name"], edit_gallery_path(gallery["id"], :format => :js), remote: true, title: "Click to Edit Name"
            %a.btn.btn-primary.margin10{"data-confirm" => "Are you sure?", "data-method" => "delete", "data-remote" => "true", :href => "#{gallery_path(gallery["id"])}", :rel => "nofollow", title: "Click to Delete"} Delete