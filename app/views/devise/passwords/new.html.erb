<div class="container">
	<h2>Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>
	  <br>
	  <br>
	  <div class="form-group">
	    <%= f.label :email, class: "control-label" %><br />
	    <%= f.email_field :email, autofocus: true, :class => 'form-control', placeholder: "Enter email address" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: "form-control btn btn-primary" %>
	  </div>
	<% end %>
	<br>
	<%= render "devise/shared/links" %>
</div>